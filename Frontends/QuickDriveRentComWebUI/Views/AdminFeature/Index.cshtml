@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Özellikleri Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araçlarla ilgili yeni özellik belirleme,ekleme,silme ve güncelleme işlemini buradan yapınız.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count > 0)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td scope="row">@count</td>
                                                <td>@item.Name</td>
                                                <td><a href="/AdminFeature/RemoveFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/AdminFeature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>

                                        }
                                    }else{
                                        <tr>
                                            <td scope="row">@count</td>
                                            <td>Veri Bulunamadı</td>
                                        </tr>
                                    }
                                    
                                  

                                </tbody>
                            </table>
                            <a href="/AdminFeature/CreateFeature/" class="btn btn-outline-primary">Yeni Özellik Ekle</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


